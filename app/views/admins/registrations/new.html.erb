<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
        <%= devise_error_messages! %>
        <br>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <br>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.email_field :name, class: 'form-control' %>
        </div>
        <br>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.email_field :last_name, class: 'form-control' %>
        </div>
        <br>

        <div class="field">
          <%= f.label :avatar %><br />
          <%= f.file_field :avatar %>
        </div>
        <br>
        <br>

        <div class="field">
          <%= f.label :passport_photo %><br />
          <%= f.file_field :passport_photo %>
        </div>
        <br>
        <br>

        <div class="field">
          <%= f.label :birthdate %><br />
          <%= f.date_select :birthdate,
            include_blank: true,
            start_year: 100.years.ago.year,
            end_year: 0.years.ago.year,
            class: 'form-control' %>
        </div>
        <br>
        
        <div class="field">
          <%= f.label :password %>
          <em>(<%= Admin.minimum_password_length %> characters minimum)</em><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
        <br>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
        <br>

        <br>
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'%>
        </div>
        <br>
      <% end %>

      <%= render "devise/shared/links" %>
    </div> <!--/.col-md-4 -->

    <div class="col-md-4"></div>
  </div> <!--/.row -->
</div> <!--/.container -->
