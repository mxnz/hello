= form_for @form do |f|
  = render 'shared/error_messages', target: @form
  = f.label :name
  = f.text_field :name, class: 'form-control'
  br

  = f.label :description
  = f.text_area :description, class: 'form-control'
  br

  = f.label :photo
  = f.file_field :photo
  br

  - if @form.photo.file.present?
    div class="checkbox"
      = label_tag do
        = f.check_box :remove_photo
        | Remove photo
    br

  br
  = f.submit 'Save', class: 'btn btn-success'
  | &nbsp
  - cancel_path = @form.persisted? ? product_path(@form) : products_path
  = link_to 'Cancel', cancel_path, class: 'btn btn-danger'
